<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="4.0" method="upgrade">

    <name>Zoho ZeptoMail</name>
    <creationDate>April 2023</creationDate>
    <author>Zoho Mail</author>
	<authorEmail>zmintegration@zohomail.com</authorEmail>
    <authorUrl>https://zoho.com</authorUrl>
    <copyright>Zoho Corporation</copyright>
    <license>GNU General Public License version 2 or later; see LICENSE.txt</license>
    <version>1.0.0</version>
    <description>COM_ZOHOZEPTOMAIL_DESC</description>

    <namespace path="src/">Zoho\Component\ZohoZeptoMail</namespace>
    <scriptfile>script.zohozeptomail.php</scriptfile>


    <administration>
        <!-- The link that will appear in the Admin panel's "Components" menu -->
        <menu>Zoho ZeptoMail</menu>
		<submenu>
			<menu link="option=com_zohozeptomail">COM_ZOHOZEPTOMAIL_CONFIGURE_ACCOUNT</menu>
			<menu link="option=com_zohozeptomail&amp;view=test">COM_ZOHOZEPTOMAIL_TEST_MAIL</menu>
		</submenu>

        <files folder="admin">
            <folder>services</folder>
            <folder>src</folder>
            <folder>tmpl</folder>
        </files>
		<languages folder="admin/language" >
			<language tag="en-GB">en-GB/com_zohozeptomail.ini</language>
			<language tag="en-GB">en-GB/com_zohozeptomail.sys.ini</language>
        </languages>
		 
    </administration>

	<media destination="com_zohozeptomail" folder="media/com_zohozeptomail" >
		<folder>css</folder>
		<folder>img</folder>
	</media>
    <plugins>
        <plugin plugin="zeptomailer" group="system" />
    </plugins>
	<updateservers>
        <server type="extension" priority="1" name="com_zohozeptomail">https://raw.githubusercontent.com/zohomail/joomlazeptomail/main/zeptojoomlaupdate.xml</server>
    </updateservers>

</extension>
